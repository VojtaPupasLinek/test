<div id="cookieBar" class="cookieBar">
	<div class="cookieBar__inner" data-step="1">
		{control textSnippet-cookieMainText}
		<div class="btn__wrapper">
			<span data-step-target="2">{_'Settings'}</span>
			<div class="btn__wrapper-inner">
				<div class="btn btn--transparent" data-consent="none">{_'Decline all'}</div>
				<div class="btn btn--primary" data-consent="all">{_'Accept all'}</div>
			</div>
		</div>
	</div>
	<div class="cookieBar__inner" data-step="2">
		<span class="cookieBar__arrow">
			<img data-step-target="1"
				 src="data:image/png;base64,"
				 alt="">
		</span>

		<div class="cookieBar__switchWrapper">
			<span>
				<h5>{_'Necessary/functional'}</h5>
				<p>{control textSnippet-necessaryCookiesText}</p>
			</span>
			<span style="white-space: nowrap">{_'Always active'}</span>
		</div>
		<hr>
		<div class="cookieBar__switchWrapper">
			<span>
			<h5>{_'Analytics'}</h5>
			<p>{control textSnippet-analyticsCookiesText}</p>
			</span>
			<label class="cookieBar__switch" for="consent_analytics">
				<input id="consent_analytics" data-consent-cookie="cookie_consent_analytics" type="checkbox">
				<span class="cookieBar__slider cookieBar__slider--round"></span>
			</label>
		</div>
		<hr>
		<div class="cookieBar__switchWrapper">
			<span>
				<h5>{_'Advertisement'}</h5>
				<p>{control textSnippet-advertisementCookiesText}</p>
			</span>
			<label class="cookieBar__switch" for="consent_advertisement">
				<input id="consent_advertisement" data-consent-cookie="cookie_consent_advertisement" type="checkbox">
				<span class="cookieBar__slider cookieBar__slider--round"></span>
			</label>
		</div>
		<hr>
		<div class="btn__wrapper">
			<div class="btn__wrapper-inner">
				<div class="btn btn--transparent" data-consent="custom">{_'Save settings'}</div>
				<div class="btn btn--primary" data-consent="all">{_'Accept all'}</div>
			</div>
		</div>
	</div>
</div>
