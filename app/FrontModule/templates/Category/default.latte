{* Latte template *}

{block content}
<div class="container">
	<div class="col-sm-12">
		<div class="cell">
			<h2>{_}Categories{/_}</h2>
			<ul>
				{foreach $categories as $category}
					<li><a n:href="Category:content $category->id, ($category->title|webalize)">{$category->title}</a></li>
				{/foreach}
			</ul>
		</div>
	</div>
</div>
